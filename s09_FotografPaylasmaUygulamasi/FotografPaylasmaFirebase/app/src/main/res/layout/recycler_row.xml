<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="5dp"
    >

    <ImageView
        android:layout_width="320dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_margin="7dp"
        app:srcCompat="@drawable/gorsel"
        android:id="@+id/recycle_row_imageview"
        ></ImageView>

    <TextView
        android:id="@+id/recycle_row_kullanici_email"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:text="kullanici_email"
        android:textColor="@color/purple_700"
        android:textSize="20sp"

        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı yorum"
        android:textColor="@color/purple_700"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/recycle_row_kullanici_yorum"
        ></TextView>

</LinearLayout>